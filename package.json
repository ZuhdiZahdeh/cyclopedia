{
  "type": "module",
  "name": "cyclopedia-app",
  "version": "1.0.0",
  "private": true,

  "scripts": {
    "dev": "vite",
    "build": "vite build",                 // ينتج مجلد dist (متوافق مع webDir)
    "preview": "vite preview",

    "verify": "node scripts/verify.js",
    "lint": "eslint .",
    "format": "prettier -w .",

    // --- Capacitor / Native helper scripts ---
    "cap:init": "npx cap init cyclopedia edu.cyclopedia.app --web-dir=dist",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",

    "android": "npx cap open android",
    "ios": "npx cap open ios",

    // بناء سريع للتجربة على جهاز فعلي
    "dev:native": "npm run build && npm run cap:sync",

    // (اختياري) توليد حزمة المتجر لأندرويد
    "android:bundle": "cd android && ./gradlew bundleRelease"
  },

  "dependencies": {
    "@capacitor/core": "^7.4.2",
    "dotenv": "^16.5.0",
    "firebase": "^12.1.0",
    "firebase-admin": "^13.4.0",
    "node-fetch": "^3.3.2"
  },

  "devDependencies": {
    "@capacitor/cli": "^7.4.2",
    "@capacitor/android": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "eslint": "^9.9.0",
    "fast-glob": "^3.3.3",
    "playwright": "^1.46.0",
    "prettier": "^3.3.3",
    "sirv": "^2.0.4",
    "vite": "^7.1.1"
  }
}
